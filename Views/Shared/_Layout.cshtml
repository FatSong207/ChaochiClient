<!DOCTYPE html>
<html lang="Zh-hant" xml:lang="Zh-hant">
<head>
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <link href="~/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title - 兆基管理顧問股份有限公司</title>
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    @await RenderSectionAsync("styles", required: false)
    <script>
        var sysBaseUrl = '@Url.Content("~/")';
        var sysControllerUrl = "@ViewData["ControllerUrl"]";
        var sysPageAction = "@ViewData["ActionName"]";
    </script>
</head>
<body class="page-header-fixed page-content-white page-sidebar-closed-hide-logo" spellcheck="false">
    @Html.AntiForgeryToken()

    <div id="header">
        <partial name="_PartialHeader.cshtml" />
    </div>
    <div class="page-container">
        <div id="left_menu">
            <partial name="_PartialLeftMenu.cshtml" />
		</div>  
        <div id="content">
            <div class="page-content-wrapper">
                <div class="page-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div id="footer">
        <partial name="_PartialFooter.cshtml" />
    </div>  
    <script src="~/js/site.min.js" asp-append-version="true"></script>
</body>
</html>
@await RenderSectionAsync("scripts", required: false)

<script language="javascript">

    InitPageEvents();

</script>

